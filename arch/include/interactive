RUN ${PACMAN_UPDATE} && \
    yes | pacman -S ack bash-completion breeze-icons ccache faenza-icon-theme gdb ninja qt5ct \
        qtcreator-clang8 ttf-dejavu ttf-ubuntu-font-family vim ninja xterm paraview zenity

RUN mkdir -p /home/user/.ccache && \
    echo "max_size = 5.0G" > /home/user/.ccache/ccache.conf && \
    cd /usr/local/bin && \
    for ii in cc clang clang++ cpp g++ gcc ; do ln -s $(which ccache) $ii; done

