RUN APT_UPDATE && \
    apt-get dist-upgrade -qqy --no-install-recommends APT_REDIRECT && \
    APT_INSTALL libx11-xcb1 libgl1 qt5dxcb-plugin && \
    wget -q http://de.archive.ubuntu.com/ubuntu/pool/main/u/ubuntu-font-family-sources/ttf-ubuntu-font-family_0.80-0ubuntu2_all.deb && \
    dpkg -i ttf-ubuntu-font-family_0.80-0ubuntu2_all.deb APT_REDIRECT && \
    rm ttf-ubuntu-font-family_0.80-0ubuntu2_all.deb 
RUN cd /tmp && \
    wget https://download.qt.io/official_releases/qtcreator/4.2/4.2.2/qt-creator-opensource-linux-x86_64-4.2.2.run && \
    wget https://raw.githubusercontent.com/benlau/qtci/master/bin/extract-qt-installer && \
    chmod 755 extract-qt-installer && \
    ./extract-qt-installer qt-creator-opensource-linux-x86_64-4.2.2.run /usr/local/ && \
    rm extract-qt-installer qt-creator-opensource-linux-x86_64-4.2.2.run
