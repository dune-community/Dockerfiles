include(global_macros)
# weird hacky way to prevent apt from not finding this in its actual source repo
RUN wget -q http://deb.debian.org/debian/pool/contrib/n/nvidia-support/nvidia-installer-cleanup_20151021+4_amd64.deb && \
    dpkg -i nvidia-installer-cleanup_20151021+4_amd64.deb APT_REDIRECT && \
    rm nvidia-installer-cleanup_20151021+4_amd64.deb

RUN echo "deb http://deb.debian.org/debian/ DEBIANVERSION contrib non-free" > /etc/apt/sources.list.d/DEBIANVERSION-nonfree.list && \
    APT_UPDATE APT_REDIRECT && \
    APT_INSTALL libgl1-nvidia-glx APT_REDIRECT && \
    APT_INSTALL nvidia-driver APT_REDIRECT && \
    apt-get autoremove -y APT_REDIRECT && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
