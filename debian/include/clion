include(global_macros)

ENV ALLINEA_VERSION=6.1 \
    PATH=/opt/allinea/bin:${PATH}

RUN APT_UPDATE APT_REDIRECT && \
    APT_INSTALL wget openjdk-8-jdk libxext6 libxrender1 libxtst6 libxi6 APT_REDIRECT && \
    apt-get remove -yq qtcreator && \
    mkdir -p /opt/ide && \
    wget -qO- https://download.jetbrains.com/cpp/CLion-2017.3.3.tar.gz | \
        tar zx --strip-components=1 -C /opt/ide && \
    apt-get autoremove -y && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    mkdir /tmp/allinea/ && \
    wget -qO- http://content.allinea.com/downloads/allinea-forge-${ALLINEA_VERSION}-Ubuntu-14.04-x86_64.tar \
        | tar x --strip-components=1 -C /tmp/allinea APT_REDIRECT && \
    /tmp/allinea/textinstall.sh --accept-licence  /opt/allinea/ APT_REDIRECT && \
    rm -rf /tmp/allinea && \
    ln -s /opt/ide/bin/clion.sh /usr/local/bin/clion
